<center>
    <h1>Add Data</h1>
    <form method="post" action="/addRecord">
        <table border="4">
            <tr>
                <td>Name</td>
                <td><input type="text" name="name"></td>
            </tr>
            <tr>
                <td>Auhthor name</td>
                <td><input type="text" name="author_name"></td>
            </tr>
            <tr>
                <td>Price</td>
                <td><input type="text" name="price"></td>
            </tr>
            <tr>
                <td>Award</td>
                <td>
                    <!-- <input type="text" name="award"> -->
                <% let award = ["booker price","national book award","edger award","hugo award","newbery medal"] %>
                <select name="award" >
                    <option value="">--select award--</option>
                    <% award.map((v)=>{ %>
                        <option value="<%= v %>">
                            <%= v %>
                        </option>
                    <% }) %>
                </select>
            </td>
            </tr>
            <tr>
                <td>No Of pages</td>
                <td><input type="text" name="pages"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="submit"></td>
            </tr>
        </table>
    </form>
    <a href="/">View</a>
</center>